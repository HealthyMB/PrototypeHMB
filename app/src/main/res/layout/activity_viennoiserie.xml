<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/d_choix"
            android:id="@+id/d_choixId"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_croissant"
                android:id="@+id/d_croissantId"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_croisaant_BarId"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="33dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_croissant_portion_Id"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_pain_au_chocolat"
                android:id="@+id/d_pain_au_chocolat_Id"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_pain_au_chocolat_Bar_Id"
                    android:indeterminate="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_pain_au_chocolat_portion_Id"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_chaussons"
                android:id="@+id/d_chaussons_Id"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_chaussons_Bar_Id"
                    android:layout_marginLeft="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_chaussons_portion_Id"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_pain_au_raisins"
                android:id="@+id/d_pain_au_raisins_Id"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_pain_au_raisins_Bar_Id"
                    android:indeterminate="false"
                    android:layout_marginLeft="23dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_pain_au_raisins_portion_Id"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_pain_lait"
                android:id="@+id/d_pain_au_lait_Id"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_pain_au_lait_Bar_Id"
                    android:indeterminate="false"
                    android:layout_marginLeft="55dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_pain_au_lait_portion_Id"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_brioche"
                android:id="@+id/d_brioche_Id"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_brioche_Bar_Id"
                    android:indeterminate="false"
                    android:layout_marginLeft="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 portion"
                    android:id="@+id/d_brioche_portion_Id"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valider"
                android:id="@+id/d_valider"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d_modifier"
                android:layout_marginLeft="70dp"
                android:text="@string/d_modifier"
                android:onClick="onClick" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>