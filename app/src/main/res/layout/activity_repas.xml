<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="efrei.healthymb.Menu"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d_repas"
            android:id="@+id/d_repas"
            android:hint="@string/d_repas"
            android:textSize="40sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">
                <ImageButton
                    android:text="@string/d_petit_dej"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:background="@drawable/ic_home_petit_dej"
                    android:textAlignment="center"
                    android:id="@+id/d_petit_dej"
                    android:backgroundTint="@android:color/black"
                    android:clickable="true"
                    android:onClick="onClick"/>

                <ImageButton android:text="@string/d_dejeuner"
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_home_dejeuner"
                    android:id="@+id/d_dej"
                    android:backgroundTint="@android:color/black"
                    android:onClick="onClick"
                   />

            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/d_petit_dej"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:text="@string/d_dejeuner"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton android:text="@string/d_diner"
                    android:layout_column="0"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_home_diner"
                    android:id="@+id/d_diner"
                    android:backgroundTint="@android:color/black"
                    android:clickable="true"
                    android:onClick="onClick"/>

                <ImageButton android:text="@string/d_gouter"
                    android:layout_column="1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_home_gouter"
                    android:id="@+id/d_gouter"
                    android:backgroundTint="@android:color/black"
                    android:clickable="false"
                    android:onClick="onClick"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/d_diner"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:text="@string/d_gouter"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </TableRow>

        </TableLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valider"
                android:id="@+id/d_valider"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d_modifier"
                android:layout_marginLeft="70dp"
                android:text="@string/d_modifier"
                android:onClick="onClick" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
